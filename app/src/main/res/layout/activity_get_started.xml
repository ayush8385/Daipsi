<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GetStartedActivity"
    android:background="@color/bg">
    <LinearLayout
        android:id="@+id/icon_appname_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="200sp"
            android:background="@drawable/bg_getstarted_video"
            android:gravity="center">
            <ImageView
                android:src="@drawable/play_button_logo"
                android:layout_width="80sp"
                android:layout_height="80sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:paddingBottom="10sp"
            android:orientation="vertical"
            android:background="@drawable/bg_getstarted_video_detail">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10sp"
                android:paddingStart="30sp"
                android:paddingEnd="30sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:background="@drawable/detail_title"/>
                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="150sp"
                    android:layout_height="20sp"
                    android:background="@drawable/detail_title"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    android:gravity="center|left">
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                    <ImageView
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/ic_star"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                    <ImageView
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/ic_star"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                    <ImageView
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/ic_star"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                    <ImageView
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/ic_star_white"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                    <TextView
                        android:layout_marginLeft="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1239)"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>
                <TextView
                    android:padding="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1000"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="30sp"
            android:text="Take Video Courses"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/step_outside_your_comfort_zone"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#9071BD">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_courses"
                android:text="Courses"
                android:padding="15sp"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="7sp"
            android:layout_marginBottom="7sp"
            android:layout_width="1.5sp"
            android:layout_height="match_parent"
            android:background="@color/bg"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sign_in"
                android:text="@string/sign_in"
                android:padding="15sp"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>