<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.downloadOptionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:padding="20sp">

        <LinearLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_arrow_back"
                android:layout_width="30sp"
                android:layout_height="30sp"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Download Options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_below="@id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sold_round_light"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:textSize="14sp"
                        android:text="Video Download Quality"
                        android:textColor="@color/profile_textColor" />
                    <TextView
                        android:layout_marginTop="-15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:textSize="10sp"
                        android:text="Video Download Quality"
                        android:textColor="@color/profile_textColor" />
                </LinearLayout>

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sold_round_light"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:textSize="14sp"
                        android:text="Download over WiFi Only"
                        android:textColor="@color/profile_textColor" />

                </LinearLayout>

                <com.suke.widget.SwitchButton
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sold_round_light"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:textSize="14sp"
                        android:text="Download to SD card"
                        android:textColor="@color/profile_textColor" />

                </LinearLayout>

                <com.suke.widget.SwitchButton
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>