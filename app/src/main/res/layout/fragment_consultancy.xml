<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4B5F3"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/part1"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultancy"
            android:textSize="20dp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <TextView
        android:layout_below="@id/part1"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/consultancy_discription"
        android:id="@+id/consultancy_discription"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Direction"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/consultancy_discription"
        android:textSize="20dp"
        android:id="@+id/get_direction"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_direction"
        android:src="@drawable/line"
        android:id="@+id/line_get"
        android:layout_marginLeft="40dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_get"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/contact_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_layout"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone"
                android:id="@+id/phone"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9876543210"
                android:textSize="16dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_layout"
            android:id="@+id/email_layout"
            android:layout_marginTop="32dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email"
                android:id="@+id/email"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@digitalhain.com"
                android:layout_marginLeft="18dp"
                android:textSize="16dp"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_layout"
            android:layout_marginTop="32dp"
            android:id="@+id/location_layout"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:id="@+id/location"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Gen IDEC, ITS Engineering Clg."
                android:layout_marginLeft="18dp"
                android:textSize="16dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:id="@+id/send_box"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultancy on text"
            android:textSize="20dp"
            android:id="@+id/Consultancy_on_text"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/Consultancy_on_text"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/custam_search_bg_new"
            android:hint="Name"
            android:id="@+id/name"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_below="@id/name"
            android:hint="Email"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/custam_search_bg_new"
            android:id="@+id/email_enter"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:paddingLeft="15dp"
            android:layout_below="@id/email_enter"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/custam_search_bg_new"
            android:hint="Message"
            android:id="@+id/message"
            />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_box"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:text="Send a Request"
        android:id="@+id/send_a_request"
        />






</RelativeLayout>