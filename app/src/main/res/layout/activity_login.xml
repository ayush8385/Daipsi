<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:padding="10sp"
    android:background="@color/white">
   <LinearLayout
       android:id="@+id/toolBar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center">
       <TextView
           android:textColor="@color/black"
           android:textSize="20sp"
           android:text="@string/sign_in"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/below_toolbar_layout"
        android:layout_marginTop="30sp"
        android:layout_below="@id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8sp"
        android:paddingEnd="8sp"
        >
        <LinearLayout
            android:padding="4sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ctm_bg_white_round">
            <EditText android:id="@+id/login_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mail"
                android:textSize="16sp"
                android:hint="E-mail"
                android:drawablePadding="10dp"
                android:textColor="@color/textBox"
                android:textColorHint="@color/profile_text"
                android:layout_margin="5sp"
                android:inputType="textWebEmailAddress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="10sp"
            android:padding="4sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ctm_bg_white_round">
            <EditText android:id="@+id/login_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mail"
                android:textSize="16sp"
                android:hint="Password"
                android:textColor="@color/textBox"
                android:drawablePadding="10dp"
                android:textColorHint="@color/profile_text"
                android:layout_margin="5sp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:padding="12sp"
            android:paddingStart="30sp"
            android:paddingEnd="30sp"
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:background="@drawable/ctm_bg_white_round">
            <TextView
                android:textAllCaps="false"
                android:text="@string/log_in"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/textBox"/>
            <TextView
                android:padding="10sp"
                android:text="or"
                android:textColor="@color/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/textBox"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10sp"
            android:padding="8sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ctm_bg_white_round">
            <ImageView
                android:src="@drawable/ic_google"
                android:layout_width="24sp"
                android:layout_height="24dp"
                android:layout_marginEnd="8sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Sign In with Google"
                android:textColor="@color/profile_text"
                android:textColorHint="@color/textBox"
                android:layout_margin="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10sp"
            android:padding="8sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ctm_bg_white_round">
            <ImageView
                android:src="@drawable/ic_phone"
                android:layout_width="24sp"
                android:layout_height="24dp"
                android:layout_marginEnd="8sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Sign In with OTP"
                android:textColor="@color/profile_text"
                android:textColorHint="@color/textBox"
                android:layout_margin="5sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:padding="8sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:onClick="goto_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/new_here_create_an_account"
            android:textColor="@color/textBox"
            android:textColorHint="@color/textBox"
            android:layout_margin="5sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="10sp"
            android:gravity="center"
            android:text="@string/terms_conditions"
            android:textColor="@color/textBox"
            android:textColorHint="@color/textBox"
            android:layout_margin="5sp"/>
    </LinearLayout>
</RelativeLayout>